<head>
  <link href="<%= url('/styles/style.css') %>" rel="stylesheet" type="text/css" />
</head>
<body>
  <div class="g-block-1">
    <div class="block1">
    <h4><%= @game.player_1.name %>: <%= @game.player_1.hp %>/100HP</h4>
    </div> 
    <div class="block2">
      <form action="/attack" method="post" name="attack">
        <input type="submit" value="Attack">
      </form>
    </div>
  </div>
  <div class="g-block-2">
    <div class="block3">
      <h1><%= @game.player_1.name + ' vs ' + @game.player_2.name %></h1>
      <p><%= @attack_message %></p>
    </div> 
    <div class="block4">
    <h4><%= @game.player_2.name %>: <%= @game.player_2.hp %>/100HP</h4>
    </div>
</div>









</body>
